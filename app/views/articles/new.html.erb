<h1>Novo Article</h1>

<%= form_with model: @article do |form| %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <% @article.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <% end %>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <% @article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <div>
        <%= form.submit %>
    </div>


<% end %>

<%= link_to 'Voltar', root_path %>